<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PokeInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Species Details"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/darkpalid_blue"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/soft_blue"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/InfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/LayoutNameID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgPokemon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_Description"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:textColor="@color/darkpalid_blue"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutSpeciesName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toEndOf="@+id/imgPokemon"
                        app:layout_constraintTop_toBottomOf="@+id/PokeInfoLayout">

                        <TextView
                            android:id="@+id/tv_Height"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:textColor="@color/darkpalid_blue"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_Weight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:textColor="@color/darkpalid_blue"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Skills"
            android:textColor="@color/darkpalid_blue"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_Skills"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/soft_blue"
            app:cardCornerRadius="4dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/SkillsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_FirstSkill"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/darkpalid_blue"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_SecondSkill"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/darkpalid_blue"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_HiddenSkill"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/darkpalid_blue"
                        android:textSize="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Combat Statistics"
            android:textColor="@color/darkpalid_blue"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_Stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/soft_blue"
            app:cardCornerRadius="4dp">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="7">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="HP:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_HP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="ATAQUE:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Atack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="DEFENSE:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="S.ATTACK:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Special_Atack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="S.DEFENSE:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Special_Defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="SPEED:"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/darkpalid_blue"
                    android:textSize="15dp" />

            </GridLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>