<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokedexInfo_Fragment"
    android:background="@color/darkpalid_blue"
    >

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_blue" />

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/display_blue"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="0dp"
        android:paddingBottom="60dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/btnSearch"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/btnTypes"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay"
        app:srcCompat="@drawable/btn_search"/>

    <ImageButton
        android:id="@+id/btnTypes"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"

        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay"
        app:srcCompat="@drawable/btn_grey_a"/>

    <ImageButton
        android:id="@+id/btnStore"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="92dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay"
        app:srcCompat="@drawable/btn_grey_b"/>

    <ImageView
        android:id="@+id/imgPok"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="148dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/txtDisplay"
        app:layout_constraintEnd_toEndOf="@+id/txtDisplay"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imgType0"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/txtDisplay"
        app:layout_constraintTop_toBottomOf="@+id/txtSpecie"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imgType1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        app:layout_constraintEnd_toEndOf="@+id/txtDisplay"
        app:layout_constraintTop_toBottomOf="@+id/txtSpecie"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/imgArrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay"
        app:srcCompat="@drawable/gamepad3" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:iconTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="@+id/imgArrows"
        app:layout_constraintTop_toTopOf="@+id/imgArrows"
        app:rippleColor="@color/cardview_shadow_end_color" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:iconTint="@color/cardview_shadow_end_color"
        app:layout_constraintStart_toStartOf="@+id/imgArrows"
        app:layout_constraintTop_toTopOf="@+id/imgArrows"
        app:rippleColor="@color/cardview_shadow_end_color" />

    <ImageButton
        android:id="@+id/btn_Pokedex"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/btnStore"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        app:srcCompat="@drawable/btn_pokedex" />

    <TextView
        android:id="@+id/txtSpecie"
        android:layout_width="135dp"
        android:layout_height="17dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:background="#E6E5E5"
        app:layout_constraintStart_toStartOf="@+id/txtDisplay"
        app:layout_constraintTop_toBottomOf="@+id/txtNameNumber" />

    <TextView
        android:id="@+id/txtNameNumber"
        android:layout_width="135dp"
        android:layout_height="18dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="44dp"
        android:background="@color/soft_blue"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txtDisplay"
        app:layout_constraintTop_toTopOf="@+id/txtDisplay" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="87dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDisplay"
        app:layout_constraintEnd_toEndOf="@+id/txtDisplay" />

    <TextView
        android:id="@+id/txtWeight"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="155dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDisplay"
        app:layout_constraintStart_toStartOf="@+id/txtDisplay" />

    <TextView
        android:id="@+id/txtHeight"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="171dp"

        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDisplay"
        app:layout_constraintStart_toStartOf="@+id/txtDisplay" />

 </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
